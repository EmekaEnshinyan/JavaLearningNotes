//unfinished
public class Language{

protected String name;
protected int numSpeakers;
protected String regionsSpoken;
protected String wordOrder;

public Language(String languageName, int speakers, String region, String order){
 this.name = languageName;
 this.numSpeakers = speakers;
 this.regionsSpoken = region;
 this.wordOrder = order;
}
public void getInfo(){
 System.out.println(this.name + " is spoken by " + this.numSpeakers + " people mainly in " + this.regionsSpoken + ". The language follows the word order: " + this.wordOrder);
 
}
public static void main(String[] args){

  Language firstLang = new Language("mayan", 5000, "south", "object verb");
 firstLang.getInfo();

  

}


  
}
